.container {
    display: flex;
    flex-direction: column;
}

.head-image {
    width: 750rpx;
    height: 460rpx;
}

.audio {
    width: 102rpx;
    height: 110rpx;
    position: absolute;
    top: 180rpx;
    left: 50%;
    margin-left: -51rpx;
    opacity: 0.6;
}

.author-date {
    flex-direction: row;
    margin-left: 30rpx;
    margin-top: 20rpx;
}

.avatar {
    width: 64rpx;
    height: 64rpx;
    vertical-align: middle;
}

.avatar {
    font-size: 30rpx;
    font-weight: 300;
    margin-left: 20rpx;
    vertical-align: middle;
    color: #666;
    margin-right: 20rpx;
    border-radius:50%
}

.const-text {
    font-size: 24rpx;
    color: #999;
    margin-left: 20rpx;
}

.date {
    font-size: 24rpx;
    color: #999;
    margin-left: 20rpx;
    vertical-align: middle;
}

.title {
    margin-left: 40rpx;
    font-size: 36rpx;
    font-weight: 700;
    margin-top: 30rpx;
    letter-spacing: 2px; 
    color:#4b556c;
}

.tool {
    margin-top: 20rpx;
}    

.circle-img {
    float: right;
    margin-right: 40rpx;
    vertical-align: middle;
}

.circle-img image {
    width: 90rpx;
    height: 90rpx;

}

.share-img {
    margin-left: 30rpx;
}

.horizon {
    width: 600rpx;
    height: 2px;
    background-color: #e5e5e5;
    vertical-align: middle;
    position: relative;
    top: 46rpx;
    margin: 0 auto;
    z-index: -99;
}

.detail {
    color: #666;
    margin-left: 30rpx;
    margin-top: 20rpx;
    margin-right: 30rpx;
    line-height: 44rpx;
    letter-spacing: 2px;
}